.BtnPlus
	&::before
		content ""
		display grid
		width 48px
		height 48px
		border 1px solid $pastel
		border-radius 50px
		background $pastel url("data:image/svg+xml,%3Csvg width='18' height='18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8 0h2v18H8V0Z' fill='%23fff'/%3E%3Cpath d='M0 10V8h18v2H0Z' fill='%23fff'/%3E%3C/svg%3E") center center no-repeat
		white-space nowrap
		text-decoration none
		cursor pointer
		@extend .transition
		
		@media $smPlus
			position relative
			z-index 1
		
	&:hover,
	&-active
		&::before
			border-color $white
			background-color $brown
			background-image url("data:image/svg+xml,%3Csvg width='12' height='12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.333 0h1.334v12H5.333V0Z' fill='%23fff'/%3E%3Cpath d='M0 6.667V5.333h12v1.334H0Z' fill='%23fff'/%3E%3C/svg%3E")