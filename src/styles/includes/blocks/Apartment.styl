.Apartment
	@media $smPlus
		display grid
		grid-template-columns 1fr 1fr
	
	@media $lgPlus
		grid-template-columns 453px 1fr
		grid-template-rows auto auto 1fr
		align-items start
		column-gap 40px
		
	&_layout
		margin-bottom 23px
		text-align center
		
		@media $smPlus
			margin-bottom 40px
		
		@media $lgPlus
			margin-bottom 0
		
	&_layoutImg
		width 204px
		
		@media $smPlus
			width 294px
	
	&_icons
		display grid
		grid-template-columns auto auto
		justify-content center
		align-items center
		gap 63px
		margin-bottom 43px
		
		@media $smPlus
			grid-template-columns 100%
			grid-template-rows auto 1fr
			gap 56px
			align-items start
			justify-items end
			margin-bottom 40px
			padding-right 20px
		
		@media $lgPlus
			grid-template-columns auto auto
			grid-template-rows auto
			grid-row span 2
			align-self end
			align-items center
			margin-top 50px
			margin-bottom 0
	
	&_icon
		@media $smPlus
			&-compass
				width 100px
			
			&-plan
				width 78px
				margin-right 8px
	
	&_characteristics
		margin-bottom 38px
		
		@media $smPlus
			grid-column 1 / 3
		
		@media $lgPlus
			grid-area 1 / 2 / 2 / 3
			max-width 356px
			margin-top 3px
	
	&_bookBtnWrapper,
	&_contacts
		@media $xs
			text-align center
		
		@media $smPlus
			grid-column 1 / 3
		
		@media $lgPlus
			grid-column 2 / 3
	
	&_contacts
		@media $xs
			padding-right 15px
			padding-left 15px
	
	&_bookBtnWrapper
		margin-bottom 24px
		
		@media $lgPlus
			margin-top 3px
	
	&_bookBtn
		margin-right 13px
	
	&_contactsText
		margin-bottom 7px
		color $grey
		line-height 24px