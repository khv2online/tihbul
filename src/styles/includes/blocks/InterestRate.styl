.InterestRate
	padding 20px 20px 11px
	background $sandy
	border-radius 3px
	
	@media $smPlus
		display grid
		grid-template-columns 116px 1fr
		column-gap 35px
		padding 24px 29px 25px
	
	@media $lgPlus
		grid-template-columns 155px 1fr
	
	&_logoWrapper
		@media $xs
			min-height 46px
			margin-bottom 11px
			padding-bottom 14px
			border-bottom 1px solid rgba($black, .3)
		
		@media $smPlus
			grid-row 1 / 3
	
	&_bankName
		@media $smPlus
			margin-top 6px
			margin-bottom 23px
			padding-bottom 20px
			border-bottom 1px solid rgba($black, .3)
			font-size 16px
			line-height 20px
	
	&_paymentConditions
		@media $smPlus
			margin-right 15px