.Text
	color $white
	font-size 16px
	line-height 28px
	letter-spacing 0.02em
	
	@media $smPlus
		line-height 34px
	
	@media $lgPlus
		font-size 18px
		
	&-larger
		@media $smPlus
			font-size 20px
			line-height 37px
		
		@media $xlPlus
			font-size 24px
			line-height 44px
	
	&-centerMob
		@media $lgMinus
			text-align center