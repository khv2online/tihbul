.Tooltip
	&_text
		// position fixed
		position absolute
		top calc(-100% - 10px)
		left 0
		width 288px
		padding 7px 22px 7px
		background $white
		box-shadow 0 4px 20px rgba(0, 0, 0, 0.12)
		font-size 18px
		line-height 34px
		color $black
		letter-spacing 0.02em
		opacity 0
		visibility hidden
		@extend .transition
		
		@media $smPlus
			top 0
			left 24px
			width 297px
			padding 7px 10px 7px 38px
			
			&-right
				left auto
				right 24px
				padding 7px 38px 7px 18px
	
	&-active
		.Tooltip_text
			opacity 1
			visibility visible