.CircleBtn
	display inline-grid
	width 40px
	height 40px
	border-radius 50px
	background-color $pastel
	background-position center center
	background-repeat no-repeat
	white-space nowrap
	text-decoration none
	@extend .transition
	
	&:hover
		background-color $brown
	
	&-menuHamburger
		background-image url("data:image/svg+xml,%3Csvg width='20' height='6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23fff' d='M0 0h20v2H0zM0 4h20v2H0z'/%3E%3C/svg%3E")
		
		@media $smPlus
			width 70px
			background-size 28px auto
	
	&-phone
		background-image url("data:image/svg+xml,%3Csvg width='20' height='20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M3.059 1h4.117l2.06 5.147-2.574 1.544a11.323 11.323 0 0 0 5.147 5.147l1.544-2.573 5.147 2.058v4.118a2.059 2.059 0 0 1-2.059 2.059A16.47 16.47 0 0 1 1 3.059 2.059 2.059 0 0 1 3.059 1' stroke='%23fff' stroke-width='2' stroke-linejoin='round'/%3E%3C/svg%3E")
	
	&-close
		background-image url("data:image/svg+xml,%3Csvg width='17' height='17' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23fff' d='m2 1 14.142 14.142-1.414 1.414L.586 2.414z'/%3E%3Cpath fill='%23fff' d='M1 15 15.142.858l1.414 1.414L2.414 16.414z'/%3E%3C/svg%3E")
		
		@media $smPlus
			width 70px