.ApartmentBooking
	position relative
	z-index 10
	
	@media $smPlus
		display grid
		grid-template-columns 1fr 282px
		grid-template-rows auto auto 1fr
		column-gap 20px
		align-items start
	
	@media $lgPlus
		grid-template-columns 1fr 466px
	
	&_wrapper
		@media $smPlus
			display grid
			grid-template-columns 1fr 282px
			grid-template-rows auto auto 1fr
			column-gap 20px
			align-items start
		
		@media $lgPlus
			grid-template-columns 1fr 466px
	
	&_title
		margin-bottom 17px
		
		@media $smPlus
			margin-bottom 24px
		
		@media $lgPlus
			margin-bottom 40px
	
	&_text
		margin-bottom 31px
		
		@media $smPlus
			grid-row 2 / 3
		
		@media $lgPlus
			max-width 584px
			margin-bottom 71px
	
	&_form
		margin-right 8px
		margin-bottom 40px
		
		@media $smPlus
			grid-row 3 / 4
	
	&_imgWrapper
		width 240px
		height 442px
		margin-right auto
		margin-left auto
		border-radius 216px
		overflow hidden
		
		@media $smPlus
			grid-row 1 / 4
			width 394px
			height 728px
			margin-right -111px
		
		@media $lgPlus
			width 432px
			height 799px
			margin-top 10px
			margin-right 33px
		
	&_img
		max-width none
		max-height 100%
		margin-left -46px
		
		@media $smPlus
			margin-left -74px
		
		@media $lgPlus
			margin-left -80px
	
