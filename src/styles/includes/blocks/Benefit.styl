.Benefit
	padding-right 16px
	padding-left 16px
	overflow hidden
	
	@media $smPlus
		display grid
		grid-template-columns 1fr 311px
		grid-template-rows auto auto 1fr
		align-items start
		column-gap 30px
		padding-right 0
		padding-left 32px
	
	@media $lgPlus
		grid-template-columns 395px 1fr
		grid-template-rows 1fr auto 1fr
		column-gap 96px
		padding-bottom 70px
		padding-left 0
		align-items center
	
	@media $xlPlus
		grid-template-columns 536px 1fr
		column-gap 135px
		padding-bottom 98px
	
	&_label
		margin-bottom 15px
		font-size 18px
		line-height 24px
		color $white
		letter-spacing 0.02em
		
		@media $smPlus
			margin-right -50px
			margin-bottom 63px
			font-size 24px
			line-height 44px
		
		@media $lg
			font-size 20px
			line-height 36px
		
		@media $lgPlus
			align-self end
			margin-right 0
			margin-bottom 0
	
	&_title
		margin-bottom 24px
		
		@media $lgPlus
			margin-top 24px
			margin-bottom 32px
		
	&_imgWrapper
		display grid
		place-content center
		margin-right -16px
		margin-bottom 27px
		margin-left -16px
		filter drop-shadow(0px 15px 40px rgba(0, 36, 77, 0.1))
		overflow hidden
		
		@media $smPlus
			grid-area 1 / 2 / 4 / 3
			width 397px
			margin 43px 0 0 0
			border-radius 280.5px
		
		@media $lgPlus
			position relative
			top 70px
			grid-area 1 / 1 / 4 / 2
			width auto
			margin-top 0
		
		@media $xlPlus
			top 98px
	
	&_img
		max-width none
		max-height 400px
		
		@media $smPlus
			max-height 640px
		
		@media $xlPlus
			max-height 869px
			margin-right -170px
	
	&_text
		font-size 16px
		line-height 28px
		letter-spacing 0.02em
		color $white
		
		@media $smPlus
			margin-right 20px
			line-height 34px
		
		@media $lgPlus
			margin-right 0
			align-self start
			font-size 16px
			line-height 30px
		
		@media $xlPlus
			font-size 18px
			line-height 34px