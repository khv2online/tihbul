.BtnSandy
	display inline-grid
	padding 10px 24px
	border-radius 40px
	background $sandy
	font-weight 500
	font-size 16px
	line-height 20px
	color $black
	text-align center
	text-decoration none
	white-space nowrap
	cursor pointer
	@extend .transition
	
	&:hover
		background darken($sandy, 10%)
	
	&-layoutsSlider,
	&-layouts
		padding-top 14px
		padding-bottom 14px