.Characteristics
	&_list
		list-style none
		display grid
		gap 13px
		
		@media $lgPlus
			gap 22px
	
	&_item
		display grid
		grid-template-columns auto auto
		justify-content space-between
		align-items center
		gap 10px
		font-size 16px
		line-height 24px
	
	&_name
		color $grey
	
	&_value
		font-size 18px
		
		@media $smPlus
			font-size 24px
			line-height 24px