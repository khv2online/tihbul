.Furnish
	color $white
	letter-spacing 0.02em
	
	&_textWrapper
		position relative
		z-index 10
		
		@media $lgPlus
			width 648px
	
	&_label
		margin-bottom 16px
		font-size 18px
		line-height 24px
		letter-spacing 0.02em
		
		@media $smPlus
			margin-bottom 23px
			font-size 24px
			line-height 44px
	
	&_title
		margin-bottom 16px
		
		@media $smPlus
			margin-bottom 32px
	
	&_text
		margin-bottom 74px
		
		@media $smPlus
			margin-bottom 111px
		
		& > p
			margin-bottom 12px
			
			@media $lgPlus
				margin-bottom 0
			
			&:last-child
				margin-bottom 0
	
	&_imgWrapper
		@media $lgPlus
			margin-top -384px