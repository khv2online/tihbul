.Gallery
	padding 30px 0 74px
	
	@media $smPlus
		padding 30px 0
	
	@media $lgPlus
		padding 0 0 87px
	
	&_title
		margin-bottom 15px
		
		@media $smPlus
			margin-bottom 24px
			margin-left 7px
		
		@media $lgPlus
			margin-bottom 17px
			margin-left 0
	
	&_dropdownsWrapper
		margin-bottom 30px
		
		@media $smPlus
			display grid
			grid-template-columns auto auto
			justify-content space-between
			align-items center
			margin-bottom 63px
			margin-left 7px
		
		@media $lgPlus
			margin-left 0
			padding-right 14px
	
	&_slider
		margin-bottom 50px
		padding-right 16px
		padding-left 16px
		
		@media $smPlus
			margin-bottom 68px